@model IEnumerable<lab9.Models.Article>
@{
	ViewData["Title"] = "Index";
}

<h3>Index</h3>
<p>
	<a asp-action="Create">Create a new article</a>
</p>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model =>model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model =>model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model =>model.Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ExpirationDate)
			</th>
			<th>
				@Html.DisplayNameFor(model =>model.Category)
			</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		@foreach (var item in Model){
			<tr>
				<td>
					@Html.DisplayFor(elem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(elem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(elem => item.Price)
				</td>
				<td>
					@Html.DisplayFor(elem => item.ExpirationDate)
				</td>
				<td>
					@Html.DisplayFor(elem => item.Category)
				</td>
				<td>
					@Html.ActionLink("Update", "Update", new { id = item.Id }) |
					@Html.ActionLink("Read", "Read", new { id = item.Id }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.Id })
				</td>
			</tr>
		}
	</tbody>

</table>

@section something{
    <h3>My section</h3>
}
